<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context="com.works.adeogo.doctor.GigRegisterFragment">


    <LinearLayout
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/registerRoot">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Consultation Details"
            android:layout_margin="20dp"
            android:textSize="27sp"
            android:textColor="@android:color/white"
            android:fontFamily="@font/shree"/>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:layout_marginRight="8dp"
            android:layout_marginLeft="8dp"

            app:cardElevation="1dp"
            app:cardBackgroundColor="@color/slight_transparent_white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="5dp">

                <com.rengwuxian.materialedittext.MaterialEditText
                    android:id="@+id/edtSpecial"
                    android:hint="Consultation Fee"
                    android:inputType="number"
                    android:textColor="@color/colorPrimary"
                    android:textColorHint="@color/colorPrimary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:fontFamily="@font/shree"
                    android:layout_gravity="center"
                    android:gravity="center"

                    app:met_floatingLabel="highlight"
                    app:met_baseColor="@color/colorPrimary"
                    app:met_singleLineEllipsis="true"
                    app:met_primaryColor="@color/colorPrimary" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" Set Work Time"
                    android:fontFamily="@font/shree"
                    android:textSize="15sp"
                    android:textColor="@android:color/black"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="4"
                    android:orientation="horizontal">

                    <TextView
                        android:fontFamily="@font/shree"
                        android:id="@+id/startTime"
                        android:hint="Start Time"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:inputType="number"
                        android:textColor="@color/colorPrimary"
                        android:textColorHint="@color/colorPrimary"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2" />

                    <View
                        android:layout_width="1dp"
                        android:background="@android:color/black"
                        android:layout_height="match_parent"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="20dp"/>

                    <TextView
                        android:fontFamily="@font/shree"
                        android:id="@+id/endTime"
                        android:hint="End Time"
                        android:inputType="number"
                        android:textColor="@color/colorPrimary"
                        android:textColorHint="@color/colorPrimary"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"

                        android:layout_gravity="center"
                        android:gravity="center" />


                </LinearLayout>

                <TextView
                    android:fontFamily="@font/shree"
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" Set Work Days"
                    android:textSize="15sp"
                    android:textColor="@android:color/black"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="7"
                    android:orientation="horizontal">

                    <TextView xmlns:android="http://schemas.android.com/apk/res/android"
                        android:fontFamily="@font/shree"
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:background="@color/colorPrimary"
                        android:text="S"
                        android:layout_margin="10dp"
                        android:textColor="@color/white"
                        android:padding="5dp"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:id="@+id/sunday"
                        android:layout_weight="1"/>

                    <TextView xmlns:android="http://schemas.android.com/apk/res/android"
                        android:fontFamily="@font/shree"
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:background="@color/colorPrimary"
                        android:text="M"
                        android:layout_margin="10dp"
                        android:textColor="@color/white"
                        android:padding="5dp"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:id="@+id/monday"
                        android:layout_weight="1"/>

                    <TextView xmlns:android="http://schemas.android.com/apk/res/android"
                        android:fontFamily="@font/shree"
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:background="@color/colorPrimary"
                        android:text="T"
                        android:layout_margin="10dp"
                        android:textColor="@color/white"
                        android:padding="5dp"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:id="@+id/tuesday"
                        android:layout_weight="1"/>

                    <TextView xmlns:android="http://schemas.android.com/apk/res/android"
                        android:fontFamily="@font/shree"
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:background="@color/colorPrimary"
                        android:text="W"
                        android:layout_margin="10dp"
                        android:textColor="@color/white"
                        android:padding="5dp"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:id="@+id/wednesday"
                        android:layout_weight="1"/>

                    <TextView xmlns:android="http://schemas.android.com/apk/res/android"
                        android:fontFamily="@font/shree"
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:background="@color/colorPrimary"
                        android:text="T"
                        android:layout_margin="10dp"
                        android:textColor="@color/white"
                        android:padding="5dp"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:id="@+id/thursday"
                        android:layout_weight="1"/>

                    <TextView xmlns:android="http://schemas.android.com/apk/res/android"
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:background="@color/colorPrimary"
                        android:text="F"
                        android:layout_margin="10dp"
                        android:textColor="@color/white"
                        android:padding="5dp"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:id="@+id/friday"
                        android:layout_weight="1"/>

                    <TextView xmlns:android="http://schemas.android.com/apk/res/android"
                        android:fontFamily="@font/shree"
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:background="@color/colorPrimary"
                        android:text="S"
                        android:layout_margin="10dp"
                        android:textColor="@color/white"
                        android:padding="5dp"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:id="@+id/saturday"
                        android:layout_weight="1"/>



                </LinearLayout>


                <TextView
                    android:fontFamily="@font/shree"
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" Set Meeting Venues"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="4"
                    android:orientation="horizontal">

                    <TextView xmlns:android="http://schemas.android.com/apk/res/android"
                        android:fontFamily="@font/shree"
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:background="@color/colorPrimary"
                        android:text="Online"
                        android:layout_margin="10dp"
                        android:textColor="@color/white"
                        android:padding="5dp"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:id="@+id/online"
                        android:layout_weight="1"/>

                    <TextView xmlns:android="http://schemas.android.com/apk/res/android"
                        android:fontFamily="@font/shree"
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:background="@color/colorPrimary"
                        android:text="Home"
                        android:layout_margin="10dp"
                        android:textColor="@color/white"
                        android:padding="5dp"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:id="@+id/home"
                        android:layout_weight="1"/>

                    <TextView xmlns:android="http://schemas.android.com/apk/res/android"
                        android:fontFamily="@font/shree"
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:background="@color/colorPrimary"
                        android:text="Office"
                        android:layout_margin="10dp"
                        android:textColor="@color/white"
                        android:padding="5dp"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:id="@+id/office"
                        android:layout_weight="1"/>

                    <TextView xmlns:android="http://schemas.android.com/apk/res/android"
                        android:fontFamily="@font/shree"
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:background="@color/colorPrimary"
                        android:text="Clinic"
                        android:layout_margin="10dp"
                        android:textColor="@color/white"
                        android:padding="5dp"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:id="@+id/clinic"
                        android:layout_weight="1"/>




                </LinearLayout>

            </LinearLayout>

        </android.support.v7.widget.CardView>


    </LinearLayout>

</ScrollView>

