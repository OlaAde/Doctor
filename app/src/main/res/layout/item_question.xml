<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <RelativeLayout
        android:id="@+id/mYouMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"

        android:orientation="vertical">

        <TextView
            android:background="@drawable/you_curved_background"

            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:id="@+id/youQuestionMessageTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:maxWidth="250dp"
            android:textSize="15sp"
            tools:text="Message" />

        <com.joooonho.SelectableRoundedImageView
            android:scaleType="centerCrop"
            tools:src="@drawable/background"
            android:id="@+id/photoYou"
            android:layout_width="150dp"
            android:layout_height="150dp"

            app:sriv_right_top_corner_radius="10dp"
            app:sriv_left_top_corner_radius="10dp"
            app:sriv_left_bottom_corner_radius="10dp"/>

    </RelativeLayout>


    <RelativeLayout


        android:id="@+id/mNotYouMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:orientation="vertical">

        <TextView

            android:background="@drawable/not_you_curved_background"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingRight="10dp"
            android:id="@+id/questionMessageTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:maxWidth="250dp"
            android:textSize="15sp"
            tools:text="Message" />

        <com.joooonho.SelectableRoundedImageView
            app:sriv_right_top_corner_radius="10dp"
            app:sriv_left_top_corner_radius="10dp"
            app:sriv_right_bottom_corner_radius="10dp"


            android:scaleType="centerCrop"
            tools:src="@drawable/background"
            android:id="@+id/photoNotYou"
            android:layout_width="150dp"
            android:layout_height="150dp" />

    </RelativeLayout>

</RelativeLayout>